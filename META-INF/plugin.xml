<idea-plugin version="2">
	<id>org.napile.idea.cpp4idea.makefile</id>
	<name>Makefile</name>   
	<extensions defaultExtensionNs="com.intellij">
		<completion.contributor language="Makefile" implementationClass="org.napile.cpp4idea.makefile.codeInsight.completion.MakefileCompletionContributor" />
		<lang.parserDefinition language="Makefile" implementationClass="com.advancedtools.cpp.makefile.lang.MakefileParserDefinition"/>
		<lang.commenter language="Makefile" implementationClass="com.advancedtools.cpp.makefile.MakefileCommenter"/>
		<lang.findUsagesProvider language="Makefile" implementationClass="com.advancedtools.cpp.makefile.MakefileFindUsagesProvider"/>
		<lang.psiStructureViewFactory language="Makefile" implementationClass="org.napile.cpp4idea.makefile.codeInsight.MakefilePsiStructureViewFactory"/>
		<fileTypeFactory implementation="com.advancedtools.cpp.makefile.lang.MakefileFileTypeFactory" />
		<colorSettingsPage implementation="com.advancedtools.cpp.makefile.MakefileColorsAndFontsPage"/>
		<lang.syntaxHighlighterFactory key="Makefile" implementationClass="org.napile.cpp4idea.makefile.codeInsight.MakefileSyntaxHighlighterFactory" />
	</extensions>
</idea-plugin>